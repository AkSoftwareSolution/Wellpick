<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7C83FD">

    <!-- White Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="10dp"
                >




                <!-- Title -->
                <TextView
                    android:text="Remove Ads • Premium"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <!-- Features with Icons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <!-- Feature Item -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/img_23"/>

                        <TextView
                            android:text=" No Ads Experience"
                            android:textSize="18sp"
                            android:textColor="#555"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/img_21"/>

                        <TextView
                            android:text=" Unlimited Premium Images"
                            android:textSize="18sp"
                            android:textColor="#555"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </LinearLayout>



                </LinearLayout>

                <!-- Monthly Plan -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMonthly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="16dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    >

                    <TextView
                        android:text="৳230 / Month\nAuto-renewable"
                        android:padding="16dp"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>

                <!-- 6 Month -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSixMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#FFF7E6"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"

                    >

                    <TextView
                        android:text="৳1200 / 6 Month\nSave 15%"
                        android:padding="16dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>

                <!-- Yearly -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardYearly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#E8EBFF"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"

                    >

                    <TextView
                        android:text="৳1999 / Year\nBest Value • Save 30%"
                        android:padding="16dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>

                <!-- Disclaimer -->
                <TextView
                    android:text="Payment will be charged to Google Play account. Subscription auto-renews unless cancelled."
                    android:textSize="12sp"
                    android:textColor="#777"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <!-- Purchase Button -->
                <Button
                    android:id="@+id/btnPurchase"
                    android:text="Go Premium"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#6C63FF"
                    android:textColor="#FFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
